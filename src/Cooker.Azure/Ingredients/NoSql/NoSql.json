{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Cosmos DB account name, max length 44 characters"
      }
    },
    "location": {
      "defaultValue": "[resourceGroup().location]",
      "type": "string",
      "metadata": {
        "description": "Location for the Cosmos DB account."
      }
    },
    "primaryRegion": {
      "type": "string",
      "metadata": {
        "description": "The primary replica region for the Cosmos DB account."
      }
    },
    "secondaryRegion": {
      "type": "string",
      "metadata": {
        "description": "The secondary replica region for the Cosmos DB account."
      }
    },
    "defaultConsistencyLevel": {
      "defaultValue": "Session",
      "allowedValues": [
        "Eventual",
        "ConsistentPrefix",
        "Session",
        "BoundedStaleness",
        "Strong"
      ],
      "type": "string",
      "metadata": {
        "description": "The default consistency level of the Cosmos DB account."
      }
    },
    "maxStalenessPrefix": {
      "defaultValue": 100000,
      "minValue": 10,
      "maxValue": 2147483647,
      "type": "int",
      "metadata": {
        "description": "Max stale requests. Required for BoundedStaleness. Valid ranges, Single Region: 10 to 1000000. Multi Region: 100000 to 1000000."
      }
    },
    "maxIntervalInSeconds": {
      "defaultValue": 300,
      "minValue": 5,
      "maxValue": 86400,
      "type": "int",
      "metadata": {
        "description": "Max lag time (minutes). Required for BoundedStaleness. Valid ranges, Single Region: 5 to 84600. Multi Region: 300 to 86400."
      }
    },
    "automaticFailover": {
      "defaultValue": true,
      "allowedValues": [
        true,
        false
      ],
      "type": "bool",
      "metadata": {
        "description": "Enable automatic failover for regions"
      }
    },
    "databaseName": {
      "defaultValue": "myDatabase",
      "type": "string",
      "metadata": {
        "description": "The name for the database"
      }
    },
    "containers": {
      "defaultValue": [],
      "type": "array",
      "metadata": {
        "description": "An array of container names to create"
      }
    },
    "throughput": {
      "defaultValue": 400,
      "minValue": 400,
      "maxValue": 1000000,
      "type": "int",
      "metadata": {
        "description": "The throughput for the container"
      }
    },
    "tags": {
      "defaultValue": {},
      "type": "object"
    }
  },
  "variables": {
    "consistencyPolicy": {
      "Eventual": {
        "defaultConsistencyLevel": "Eventual"
      },
      "ConsistentPrefix": {
        "defaultConsistencyLevel": "ConsistentPrefix"
      },
      "Session": {
        "defaultConsistencyLevel": "Session"
      },
      "BoundedStaleness": {
        "defaultConsistencyLevel": "BoundedStaleness",
        "maxStalenessPrefix": "[parameters('maxStalenessPrefix')]",
        "maxIntervalInSeconds": "[parameters('maxIntervalInSeconds')]"
      },
      "Strong": {
        "defaultConsistencyLevel": "Strong"
      }
    },
    "locations": [
      {
        "locationName": "[parameters('primaryRegion')]",
        "failoverPriority": 0,
        "isZoneRedundant": false
      }
    ]
  },
  "resources": [
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2021-01-15",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "kind": "GlobalDocumentDB",
      "properties": {
        "consistencyPolicy": "[variables('consistencyPolicy')[parameters('defaultConsistencyLevel')]]",
        "locations": "[variables('locations')]",
        "databaseAccountOfferType": "Standard",
        "enableAutomaticFailover": "[parameters('automaticFailover')]"
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases",
      "apiVersion": "2021-01-15",
      "name": "[concat(parameters('name'), '/', parameters('databaseName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('name'))]"
      ],
      "tags": "[parameters('tags')]",
      "properties": {
        "resource": {
          "id": "[parameters('databaseName')]"
        }
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
      "apiVersion": "2021-01-15",
      "name": "[concat(parameters('name'), '/', parameters('databaseName'), '/', parameters('containers')[copyIndex()])]",
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', parameters('name'), parameters('databaseName'))]"
      ],
      "tags": "[parameters('tags')]",
      "properties": {
        "resource": {
          "id": "[parameters('containers')[copyIndex()]]",
          "partitionKey": {
            "paths": [
              "/myPartitionKey"
            ],
            "kind": "Hash"
          }
        },
        "options": {
          "throughput": "[parameters('throughput')]"
        }
      },
      "copy": {
        "name": "containerCopy",
        "count": "[length(parameters('containers'))]"
      }
    }
  ],
  "outputs" : {
    "resourceId" : {
      "type" : "string",
      "value": "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('name'))]"
    },
    "connectionString": {
      "type": "string",
      "value": "[listConnectionStrings(resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('name')), '2019-12-12').connectionStrings[0].connectionString]"
    }
  }
}