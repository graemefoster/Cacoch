{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vaultName": { "type": "string" },
    "location": { "type": "string" },
    "secrets": { "type": "array" },
    "existingRgTags" : {"type" : "object"}
  },
  "variables": {
    "secretTag" : "[concat('__cacoch-secrets', '-', parameters('vaultName'))]",
    "objectCurrentSecrets" : "[if(contains(parameters('existingRgTags'), variables('secretTag')), json(parameters('existingRgTags')[variables('secretTag')]), createArray())]",
    "newSecretsTag" : {
      "[variables('secretTag')]" : "[string(parameters('secrets'))]"
    }
  },
  "resources": [
    {
      "name": "[parameters('vaultName')]",
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2019-09-01",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "enableRbacAuthorization": true
      }
    },
    {
      "name": "default",
      "type": "Microsoft.Resources/tags",
      "apiVersion": "2021-04-01",
      "properties": {
        "tags": "[union(parameters('existingRgTags'), variables('newSecretsTag'))]" 
      }
    }
  ],
  "outputs": {
    "currentSecretsRaw": {
      "type": "object",
      "value": "[parameters('existingRgTags')]"
    },
    "currentRgTags": {
      "type": "object",
      "value": "[resourceGroup()]"
    },
    "currentSecrets": {
      "type": "array",
      "value": "[variables('objectCurrentSecrets')]"
    }
  }
}