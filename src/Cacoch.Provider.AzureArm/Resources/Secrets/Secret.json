{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vaultName": {
      "type": "string"
    },
    "secretName": {
      "type": "string"
    },
    "secretValue": {
      "type": "securestring"
    },
    "currentSecrets": {
      "type" : "array"
    }
  },
  "variables": {
    "fullName": "[concat(parameters('vaultName'), '/', parameters('secretName'))]"
  },
  "resources": [
    {
      "name": "[variables('fullName')]",
      "condition" : "[not(contains(parameters('currentSecrets'), parameters('secretName')))]",
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2019-09-01",
      "properties": {
        "value": "[parameters('secretValue')]"
      }
    }
  ],
  "outputs": {
    "secretUri": {
      "type": "string",
      "value": "[reference(parameters('secretName'), '2019-09-01').secretUri]"
    }
  }
}