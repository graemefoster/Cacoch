{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serverFarmId": {
      "type": "string",
      "metadata": {
        "description": "Server Farm Id"
      }
    },
    "webAppName": {
      "type": "string",
      "minLength": 2,
      "metadata": {
        "description": "Web app name."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "appSettings": {
      "type": "array"
    },
    "secretReferences": {
      "type": "array"
    }
  },
  "variables": {
    "copy": [
      {
        "name": "formatterSecretReferences",
        "count": "[length(parameters('secretReferences'))]",
        "input": {
          "name": "[parameters('secretReferences')[copyIndex('formatterSecretReferences')].name]",
          "value": "[concat('@Microsoft.KeyVault(SecretUri=', parameters('secretReferences')[copyIndex('formatterSecretReferences')].value, ')')]"
        }
      }
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2020-06-01",
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "kind": "webapp",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[parameters('serverFarmId')]",
        "siteConfig": {
          "alwaysOn": true,
          "appSettings": "[union(parameters('appSettings'), variables('formatterSecretReferences'))]"
        }
      }
    }
  ],
  "outputs": {
    "identity": {
      "type": "string",
      "value": "[reference(concat('Microsoft.Web/sites/', parameters('webAppName')), '2016-08-01', 'Full').identity.principalId]"
    },
    "hostName" : {
      "type" : "string",
      "value": "[reference(concat('Microsoft.Web/sites/', parameters('webAppName')), '2016-08-01', 'Full').properties.hostNames[0]]"
    }
  }
}